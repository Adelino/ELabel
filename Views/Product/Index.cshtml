@model IEnumerable<ELabel.ViewModels.WineProductDetailsDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a> |
    <a asp-action="Import">Import</a> |
    <a asp-action="Export">Export</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WineInformation.Vintage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WineInformation.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WineInformation.Style)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WineInformation.Appellation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sku)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WineInformation.Vintage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WineInformation.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WineInformation.Style)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WineInformation.Appellation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sku)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
