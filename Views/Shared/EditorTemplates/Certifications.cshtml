@model Certifications

<div class="form-check">
    <input asp-for="Organic" class="form-check-input" type="checkbox" aria-describedby="OrganicHelp" />
    <label asp-for="Organic" class="form-check-label"></label>
    <div id="OrganicHelp" class="form-text">@ViewData.ModelMetadata.Properties.Where(m => m.PropertyName == "Organic").FirstOrDefault()?.Description</div>
    <span asp-validation-for="Organic" class="text-danger"></span>
</div>
