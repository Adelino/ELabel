@model string

<dl class="row">
    <dt class="col-sm-2 mb-2">
        Short link
    </dt>
    <dd class="col-sm-10">
        <a id="short-url" href="@Model" target="_blank">@Model</a>
        <button id="short-url-button" type="button" class="btn btn-light btn-sm ms-2" title="Copy link"><i class="bi bi-link"></i></button>
    </dd>
</dl>

<div>
    <a class="btn btn-light btn-sm" asp-controller="QrCode" asp-action="Download" asp-route-content="@Model" target="_blank">Download SVG</a>
    <a class="btn btn-light btn-sm" asp-controller="QrCode" asp-action="Download" asp-route-content="@Model" asp-route-format="png" target="_blank">Download PNG</a>
    <a class="btn btn-light btn-sm" asp-controller="QrCode" asp-action="Download" asp-route-content="@Model" asp-route-format="jpeg" target="_blank">Download JPEG</a>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>

<script>
    jQuery(document).ready(function ($) {
        $('#short-url-button').on('click', function () {
            // Get the text
            var copyText = document.getElementById("short-url").getAttribute("href");

            // Copy the text to clipboard
            navigator.clipboard.writeText(copyText);

            // Alert the copied text
            alert("Copied the text: " + copyText);
        });
    });
</script>
