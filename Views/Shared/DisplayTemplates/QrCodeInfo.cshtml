@model QrCodeDto

<dl class="row">
    <dt class="col-sm-2 mb-2">
        @Html.DisplayNameFor(model => model.ShortUrl)
    </dt>
    <dd class="col-sm-10">
        <a id="short-url" href="@Model.ShortUrl" target="_blank">@Model.ShortUrl</a>
        <button id="short-url-button" type="button" class="btn btn-light btn-sm ms-2" title="Copy link"><i class="bi bi-link"></i></button>
    </dd>
</dl>

<div>
    <a class="btn btn-light btn-sm" href="@Model.QRCodeDownloadUrl" target="_blank" title="@(ViewData.ModelMetadata.Properties.Where(m => m.PropertyName == "QRCodeDownloadUrl").FirstOrDefault()?.Description)">@Html.DisplayNameFor(model => model.QRCodeDownloadUrl)</a>
    <a class="btn btn-light btn-sm" href="@Model.QRCodeDownloadUrlForPng" target="_blank" title="@(ViewData.ModelMetadata.Properties.Where(m => m.PropertyName == "QRCodeDownloadUrlForPng").FirstOrDefault()?.Description)">@Html.DisplayNameFor(model => model.QRCodeDownloadUrlForPng)</a>
    <a class="btn btn-light btn-sm" href="@Model.QRCodeDownloadUrlForJpeg" target="_blank" title="@(ViewData.ModelMetadata.Properties.Where(m => m.PropertyName == "QRCodeDownloadUrlForJpeg").FirstOrDefault()?.Description)">@Html.DisplayNameFor(model => model.QRCodeDownloadUrlForJpeg)</a>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>

<script>
    jQuery(document).ready(function ($) {
        $('#short-url-button').on('click', function () {
            // Get the text
            var copyText = document.getElementById("short-url").getAttribute("href");

            // Copy the text to clipboard
            navigator.clipboard.writeText(copyText);

            // Alert the copied text
            alert("Copied the text: " + copyText);
        });
    });
</script>
