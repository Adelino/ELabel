@inject IHtmlLocalizer<SharedResource> Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Label</title>
    <meta name="description" content="Open E-Label - @Localizer["Open-source solution for electronic labels"]" />
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="header">
        <nav class="navbar text-body-secondary bg-body-tertiary">
            <div class="container">
                <div class="">
                    @await Html.PartialAsync("_SelectThemePartial")
                </div>
                <div class="ms-auto">
                    @await Html.PartialAsync("_SelectLanguagePartial")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto text-center border-top text-body-secondary bg-body-tertiary py-3 mt-3">
        <div class="container">
            <small>@Localizer["Electronic label provided by"] <a href="https://github.com/filipecarneiro/ELabel#readme" target="_blank" rel="noopener">Open E-Label</a>.</small>
        </div>
    </footer>
</body>
</html>
